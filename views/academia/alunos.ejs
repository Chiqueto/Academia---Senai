<!DOCTYPE html>
<html>
  <head>
    <meta lang="pt-br" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/output.css" />
    <title>Lista de alunos</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <header>
      <nav class="flex justify-between bg-zinc-800 py-5 px-4">
        <div class="flex items-center gap-4">
          <a href="/academia/menu"><img src="/icons/back_arrow.svg" /></a>
          <h1 class="font-jaro text-zinc-50 text-3xl">GymFit</h1>
        </div>
      </nav>
    </header> 
    <main class=" mx-4 flex-grow">
      
      <section class="font-zain px-4">
        <h2 class="text-3xl text-center text-white py-2">Lista de alunos</h2>
        <div class="relative w-full ">
          <input type="text" placeholder="Pesquisar pelo nome do aluno..."
            class="w-full py-1 pl-10 pr-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-700 placeholder-gray-400">
          <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none">
            <img src="/icons/lupa.svg" class="w-5 h-5">
          </div>
        </div><br>
        <div>
          <% if (alunos && alunos.length > 0) { %>
            <% alunos.forEach(aluno => { %>
              <div class="container bg-white rounded-lg flex items-center p-3 shadow-md w-auto mb-2">
                <div class="rounded-full bg-pink-200 flex-shrink-0 w-10 h-10">
                  <img src="/icons/user.svg" class="w-10 h-8" alt="Usuário">
                </div>
                <span class="ml-4 text-2xl text-gray-900 font-semibold"><%= aluno.nome %></span>
        
                <!-- Botão de Delete com evento para chamar função de deletação -->
                <button 
                class="ml-auto bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors"
                onclick="desmatricularAluno('<%= aluno.id %>')">
                Desvincular
              </button>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-gray-500">Nenhum aluno encontrado.</p>
          <% } %>
        </div>
      </section>
    <!-- Adicionar a barra de pesquisa na aba suspensa -->
<div id="abaSuspensa" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-10">
  <div class="bg-white p-6 rounded-lg w-96">
    <h3 class="text-2xl font-semibold text-center mb-4">Pesquisar Aluno</h3>
    <div class="relative w-full mb-4">
      <input type="text" id="nomeAluno" placeholder="Digite o nome do aluno..."
        class="w-full py-1 pl-10 pr-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-700 placeholder-gray-400"
        >
      <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none">
        <img src="/icons/lupa.svg" class="w-5 h-5">
      </div>
    </div>
    <!-- Lista de alunos encontrados -->
    <div id="">
      
    </div>
    <div class="flex justify-between mt-4">
      <button onclick="toggleAbaSuspensa()" class="bg-neonGreen text-white px-4 py-2 rounded-lg">
        Adicionar Aluno
      </button>
      <button onclick="toggleAbaSuspensa()" class="bg-red-500 text-white px-4 py-2 rounded-lg">
        Fechar
      </button>
    </div>
  </div>
</div>
    </main>
    
    
    <button onclick="toggleAbaSuspensa()" class="mx-auto bg-neonGreen rounded-xl px-4 py-2 hover:bg-neonGreenHover transition-colors text-zinc-50 font-zain text-4xl">
      Adicionar
    </button>
    
   
    <br>
    <script>
      // Função para a aba suspensa
      function toggleAbaSuspensa() {
        const abaSuspensa = document.getElementById("abaSuspensa");
        abaSuspensa.classList.toggle("hidden");
      }

  async function desmatricularAluno(idAluno) {
  const idAcademia = "<%= academia.id %>"; // Use o ID da academia vindo do objeto academia

  try {
    const response = await fetch(`/academia/alunos/desvincular`, {
      method: "DELETE",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ idAluno, idAcademia }),
    });

    if (response.ok) {
      alert("Aluno desmatriculado com sucesso!");
      location.reload(); // Atualiza a página para refletir as mudanças
    } else {
      const errorData = await response.json();
      alert(`Erro ao desmatricular aluno: ${errorData.message}`);
    }
  } catch (error) {
    console.error("Erro ao desmatricular aluno:", error);
    alert("Erro ao desmatricular aluno.");
  }
}


    </script>
  </body>
</html>