<!DOCTYPE html>
<html>
  <head>
    <meta lang="pt-br" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/styles/output.css" rel="stylesheet" />
    <title>Opções de Treinos</title>
  </head>

  <body class="flex flex-col min-h-screen">
    <header>
      <nav class="flex justify-between bg-zinc-800 py-5 px-4">
        <div class="flex items-center gap-4">
          <a href="/aluno/menu"><img src="/icons/back_arrow.svg" /></a>
          <h1 class="font-jaro text-zinc-50 text-3xl">GymFit</h1>
        </div>
      </nav>
    </header> 
    <main class=" mx-4 flex-grow"><!--Começo do perfil-->
      <section class="font-zain  px-4">
          <h2 class="text-3xl text-center text-white py-2">Lista de Personal</h2>
          <div class="relative w-full ">
            <input type="text" placeholder="Pesquisar pelo nome do personal..."
              class="w-full py-1 pl-10 pr-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-700 placeholder-gray-400">
            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none">
              <img src="/icons/lupa.svg" class="w-5 h-5">
            </div>
          </div><br>
          <div id="alunosList" class="space-y-2">
            <!-- Lista de alunos renderizada dinamicamente -->
            <% if (alunos && alunos.length > 0) { %>
              <% alunos.forEach((aluno) => { %>
                <div
                  class="container bg-white rounded-lg flex items-center justify-between p-3 shadow-md w-auto"
                >
                  <div class="flex items-center">
                    <div class="rounded-full bg-pink-200 flex-shrink-0 w-10 h-10">
                      <img src="/icons/user.svg" class="w-10 h-8" alt="Usuário" />
                    </div>
                    <span class="ml-4 text-2xl text-gray-900 font-semibold">
                      <%= aluno.nome %>
                    </span>
                  </div>
                  <button
                    onclick="removerAluno('<%= aluno.id %>')"
                    class="bg-red-500 text-white px-3 py-1 rounded-lg text-sm hover:bg-red-600"
                  >
                    Remover
                  </button>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-gray-500">Nenhum aluno encontrado.</p>
            <% } %>
          </div>
        </section>

        <button
  onclick="toggleAbaSuspensa()"
  class="mx-auto bg-neonGreen rounded-xl px-4 py-2 hover:bg-neonGreenHover transition-colors text-zinc-50 font-zain text-4xl"
>
  Adicionar
</button>

<div
  id="abaSuspensa"
  class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-10"
>
  <div class="bg-white p-6 rounded-lg w-96">
    <h3 class="text-2xl font-semibold text-center mb-4">Adicionar Aluno</h3>
    <div class="relative w-full mb-4">
      <input
        type="text"
        id="nomeAluno"
        placeholder="Digite o nome do aluno..."
        class="w-full py-1 pl-10 pr-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-700 placeholder-gray-400"
      />
      <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none">
        <img src="/icons/lupa.svg" class="w-5 h-5" />
      </div>
    </div>
    <div class="flex justify-between">
      <!-- <button
        onclick="buscarAlunos()"
        class="bg-neonGreen text-white px-4 py-2 rounded-lg"
      >
        Buscar
      </button> -->
      <form id="formAdicionarAluno" method="POST" action="/<%= id %>/adicionar"
    class="justify-center items-center">
      <label for="idAluno">ID do Aluno:</label>
      <input
        type="text"
        id="idAluno"
        name="idAluno"
        placeholder="Digite o ID do aluno..."
        class="w-full py-2 px-3 rounded-lg focus:outline-none"
        required
      />
      <button
        type="submit"
        class="bg-neonGreen text-white px-4 py-2 rounded-lg"
      >
        Adicionar Aluno
      </button>
    </form>

      <button
        onclick="toggleAbaSuspensa()"
        class="bg-red-500 text-white px-4 py-2 rounded-lg"
      >
        Fechar
      </button>
    </div>
    <div id="resultadosBusca" class="mt-4"></div> 
  </div>
  
</div>


            
    <script>// separar o script depois
      function toggleAbaSuspensa() {
        const abaSuspensa = document.getElementById("abaSuspensa");
        abaSuspensa.classList.toggle("hidden");
      }

      function buscarAlunos() {
    const nome = document.getElementById("nomeAluno").value;

    // Simular a busca
    const resultadosBusca = [
      { id: 1, nome: "Aluno Exemplo 1" },
      { id: 2, nome: "Aluno Exemplo 2" },
    ];

    const resultadosDiv = document.getElementById("resultadosBusca");
    resultadosDiv.innerHTML = "";

    resultadosBusca.forEach((aluno) => {
      const alunoDiv = document.createElement("div");
      alunoDiv.className = "flex justify-between items-center mb-2";

      alunoDiv.innerHTML = `
        <span>${aluno.nome}</span>
        <button onclick="adicionarAluno(${aluno.id})" class="bg-blue-500 text-white px-3 py-1 rounded-lg">
          Adicionar
        </button>
      `;
      resultadosDiv.appendChild(alunoDiv);
    });
  }

  function adicionarAluno(idAluno) {
    const idPersonal = "<%= id %>"; // Pegue o ID do personal via EJS ou outro método
    fetch(`/personal/${idPersonal}/adicionar`, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ idAluno }),
    })
      .then((response) => response.json())
      .then((data) => {
        if (data.error) {
          alert(data.error);
        } else {
          alert("Aluno adicionado com sucesso!");
          location.reload(); // Atualizar a página
        }
      })
      .catch((error) => console.error("Erro ao adicionar aluno:", error));
  }

// Remove o aluno do personal
async function removerAluno(idAluno) {
  try {
    const idPersonal = "<%= id %>"; // Substituir pelo ID correto vindo do backend
    const response = await fetch(`/alunos-personais/${idPersonal}/remover`, {
      method: "DELETE",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ idAluno }),
    });

    if (response.ok) {
      alert("Aluno removido com sucesso!");
      location.reload(); // Atualiza a página para exibir os novos dados
    } else {
      alert("Erro ao remover aluno.");
    }
  } catch (error) {
    console.error(error);
  }
}
     
    </script>
  </body>
  </body>
</html>
